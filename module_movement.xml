<?xml version="1.0" encoding="UTF-8"?>
<project name="module_movement" default="compile.module.movement">
  <dirname property="module.movement.basedir" file="${ant.file.module_movement}"/>
  
  <property name="module.jdk.home.movement" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.movement" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.movement" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.movement" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="movement.output.dir" value="${module.movement.basedir}/target/classes"/>
  <property name="movement.testoutput.dir" value="${module.movement.basedir}/target/test-classes"/>
  
  <path id="movement.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="movement.module.production.classpath">
    <path refid="${module.jdk.classpath.movement}"/>
    <path refid="library.spigot-1.7.2-r0.4-snapshot.classpath"/>
    <path refid="library.protocollib-3.2.0.classpath"/>
    <path refid="library.gson-2.2.4.classpath"/>
  </path>
  
  <path id="movement.runtime.production.module.classpath">
    <pathelement location="${movement.output.dir}"/>
    <path refid="library.spigot-1.7.2-r0.4-snapshot.classpath"/>
    <path refid="library.protocollib-3.2.0.classpath"/>
    <path refid="library.gson-2.2.4.classpath"/>
  </path>
  
  <path id="movement.module.classpath">
    <path refid="${module.jdk.classpath.movement}"/>
    <pathelement location="${movement.output.dir}"/>
    <path refid="library.spigot-1.7.2-r0.4-snapshot.classpath"/>
    <path refid="library.protocollib-3.2.0.classpath"/>
    <path refid="library.gson-2.2.4.classpath"/>
  </path>
  
  <path id="movement.runtime.module.classpath">
    <pathelement location="${movement.testoutput.dir}"/>
    <pathelement location="${movement.output.dir}"/>
    <path refid="library.spigot-1.7.2-r0.4-snapshot.classpath"/>
    <path refid="library.protocollib-3.2.0.classpath"/>
    <path refid="library.gson-2.2.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.movement">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.movement">
    <patternset refid="excluded.from.module.movement"/>
  </patternset>
  
  <path id="movement.module.sourcepath">
    <dirset dir="${module.movement.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="movement.module.test.sourcepath">
    <dirset dir="${module.movement.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.movement" depends="compile.module.movement.production,compile.module.movement.tests" description="Compile module Movement"/>
  
  <target name="compile.module.movement.production" depends="register.custom.compilers" description="Compile module Movement; production classes">
    <mkdir dir="${movement.output.dir}"/>
    <javac2 destdir="${movement.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.movement}/javac">
      <compilerarg line="${compiler.args.movement}"/>
      <bootclasspath refid="movement.module.bootclasspath"/>
      <classpath refid="movement.module.production.classpath"/>
      <src refid="movement.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.movement"/>
    </javac2>
    
    <copy todir="${movement.output.dir}">
      <fileset dir="${module.movement.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.movement.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.movement.tests" depends="register.custom.compilers,compile.module.movement.production" description="compile module Movement; test classes" unless="skip.tests">
    <mkdir dir="${movement.testoutput.dir}"/>
    <javac2 destdir="${movement.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.movement}/javac">
      <compilerarg line="${compiler.args.movement}"/>
      <bootclasspath refid="movement.module.bootclasspath"/>
      <classpath refid="movement.module.classpath"/>
      <src refid="movement.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.movement"/>
    </javac2>
    
    <copy todir="${movement.testoutput.dir}">
      <fileset dir="${module.movement.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.movement" description="cleanup module">
    <delete dir="${movement.output.dir}"/>
    <delete dir="${movement.testoutput.dir}"/>
  </target>
</project>